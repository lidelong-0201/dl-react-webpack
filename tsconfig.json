{
  "compilerOptions": {
    "target": "es2016",
    "esModuleInterop": true,
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true, // 不生成输出文件
    "skipLibCheck": true,
    "jsx": "react-jsx" // 这里改成react-jsx，就不需要在tsx文件中手动引入React了
  },
  "include": ["./src", "./global.d.ts"]
}
